<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jiovanny.temasavanzados.Encriptacion"
    tools:showIn="@layout/activity_encriptacion"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxtEncriptar"
        android:layout_gravity="center_horizontal"
        android:hint="Texto que se desea encriptar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encriptar"
        android:id="@+id/btnEncriptar"
        android:layout_gravity="center_horizontal"
        android:textColor="#1d82e8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxtEncriptado"
        android:layout_gravity="center_horizontal"
        android:hint="Texto Encriptado" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desencriptar"
        android:id="@+id/btnDesencriptar"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_green_dark"
        android:hint="Texto Encriptado"
        android:singleLine="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxtDesencriptado"
        android:layout_gravity="center_horizontal"
        android:hint="Texto desencriptado" />
</LinearLayout>
